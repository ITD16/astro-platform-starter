<Layout title="">
  <div
  id="fullscreen-container"
  class="flex flex-col items-center justify-center h-screen text-center space-y-4 w-screen overflow-x-auto select-none touch-manipulation"
>
  <div class="!text-[200px] !text-[#ff3c00] font-extrabold tracking-widest whitespace-nowrap">
    SUN.WIN
  </div>

  <h1 class="!text-[200px] !text-[#ff3c00] font-extrabold tracking-widest whitespace-nowrap">
    GEM.WIN
  </h1>
</div>


  <script is:inline>
    let lastTap = 0;

    function handleFullScreen() {
      const elem = document.documentElement;
      const content = document.getElementById('fullscreen-container');

      if (content) {
        content.style.height = window.innerHeight + 'px';
      }

      if (elem.requestFullscreen) {
        elem.requestFullscreen().catch((err) => {
          console.error('❌ Fullscreen error:', err);
        });
      } else if (elem.webkitRequestFullscreen) {
        elem.webkitRequestFullscreen();
      } else if (elem.msRequestFullscreen) {
        elem.msRequestFullscreen();
      }
    }

    document.addEventListener('dblclick', (e) => {
      e.preventDefault();
      handleFullScreen();
    });

    document.addEventListener('touchend', (e) => {
      const now = new Date().getTime();
      const tapLength = now - lastTap;
      if (tapLength < 300 && tapLength > 0) {
        e.preventDefault();
        handleFullScreen();
      }
      lastTap = now;
    });
  </script>
</Layout>
