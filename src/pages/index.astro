<Layout title="">
  <div class="flex flex-col items-center justify-center h-screen text-center space-y-4 w-screen overflow-x-auto select-none touch-manipulation">
    <h1 class="text-[240px] font-extrabold text-orange-500 tracking-widest whitespace-nowrap">
      SUN.WIN
    </h1>
    <h1 class="text-[240px] font-extrabold text-orange-500 tracking-widest whitespace-nowrap">
      GEM.WIN
    </h1>
  </div>

  <script>
    let lastTap = 0;

    function handleFullScreen() {
      const elem = document.documentElement;
      if (elem.requestFullscreen) {
        elem.requestFullscreen();
      } else if (elem.webkitRequestFullscreen) {
        elem.webkitRequestFullscreen();
      } else if (elem.msRequestFullscreen) {
        elem.msRequestFullscreen();
      }
    }

    document.addEventListener('dblclick', (e) => {
      e.preventDefault();
      handleFullScreen();
    });

    document.addEventListener('touchend', (e) => {
      const currentTime = new Date().getTime();
      const tapLength = currentTime - lastTap;
      if (tapLength < 300 && tapLength > 0) {
        e.preventDefault();
        handleFullScreen();
      }
      lastTap = currentTime;
    });
  </script>
</Layout>
